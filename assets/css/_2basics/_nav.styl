.navbar-wrapper
	overflow: hidden
.navbar
	background-color: $main-color
.active
	background-color: $main-color
	border-bottom: 3px solid white
.navbar-brand
	padding-top: 0
	color: white
    width: 102px
    float: left
    position: absolute
    display: inline-block
    left: 28px
	&:hover
		color: white
		text-decoration: none
		border-bottom: 3px solid white
		padding-bottom: 12px
.navbar-brand>img
	width: 75px
	@media (max-width: 991px)
		margin-left 10px
.navbar-nav
	float: right
	@media (max-width: 991px)
		float: none
.nav>li>a
	color: white
	&:focus
		background-color: $main-color
	&:hover
		background-color: $main-color
		text-decoration: none
		border-bottom: 3px solid white
		padding-bottom: 12px
	@media (max-width: 991px)
		margin-left 10px
		&:hover
			font-weight 600
.navbar-toggle .icon-bar
	background-color white