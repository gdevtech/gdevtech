#works
	.btn-primary
		color: black
		display: block
		margin: 0 auto 15px auto
		transition(background-color 0.5s\, color 1.0s)
		&:hover
			background-color: $main-color
			border-color: $main-color
			text-decoration: none
			color: white
.thumbnail
	border: 1px solid $main-color
	box-shadow: 5px 6px 7px rgba(128, 128, 128, 0.4)
	transition(box-shadow 0.5s)
	&:hover
		box-shadow: none
.works-section
	height: 350px
	background-image: url('../img/works/worksbg.jpg')
	background-size: cover
	position: relative
	color: white
	background-position-y: -175px;
	overflow: hidden
	&:before
		position: absolute
		content:" "
		top:0
		left:0
		width:100%
		height: 100%
		display: block
		z-index:0
		background-color: rgba(0, 0, 0, 0.70)
	@media (max-width: 767px)
		background-size: 800px 555px
		background-position-y: -30px
.works-section h1
	margin: 0
	position: absolute
	top: 35%
	left: 50%
	margin-right: -50%
	transform(translate(-50%, -50%))
.works-section p
	margin: 0
	position: absolute
	top: 50%
	left: 50%
	margin-right: -50%
	transform(translate(-50%, -50%))
.container-works
	width: 70%
	text-align: center
	@media (max-width: 767px)
		width: 90%
	.btn-primary
		margin: 0
		position: absolute
		background-color: rgba(0, 40, 213, 0);
		border: 2px solid $main-color
		padding: 15px 35px
		text-transform: uppercase
		cursor: pointer
		top: 75%
		left: 50%
		margin-right: -50%
		transition(background-color 0.5s)
		transform(translate(-50%, -50%))
		&:hover
			background-color: $main-color
			text-decoration: none
		@media (max-width: 767px)
			margin-top: 15px
.container-works>h1
	text-transform: uppercase
	font-size: 18px
	word-spacing: 2px
	letter-spacing: 1px
	@media (max-width: 767px)
		font-size: 23px
.container-works>p
	font-size: 2em
	@media (max-width: 767px)
		font-size: 16px
		margin-top: 30px
