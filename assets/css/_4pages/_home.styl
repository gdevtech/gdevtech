header
	height: 100vh
	background-image: url('../img/headerbg.jpg')
	background-size: cover
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
	&:before
		position: absolute
		content:" "
		top:0
		left:0
		width:100%
		height: 100vh
		display: block
		z-index:0
		background-color: rgba(0, 0, 0, 0.12)
header>h1
	color: white
	z-index: 100
header>h2
	color: white
	z-index: 100
header>h4
	color: white
	z-index: 100
	border-bottom: 2px solid white
	padding-bottom: 7px
	text-transform: uppercase
header>img
	z-index: 100
header>p
	margin: 0
	color: white
	z-index: 100
	@media (max-width: 767px)
		width: 80%
.glyphicon-circle-arrow-down
	&:hover
		color: #3e7ae3
		text-decoration: none
.glyphicon-circle-arrow-down
	margin-top: 75px
	font-size: 55px
	color: white
.top-buffer
	margin-top: 45px
.title
	font-family: 'Lato', sans-serif
	font-weight: 400
	color: $main-color
	text-transform: uppercase
	letter-spacing: -2px
	word-spacing: 5px
.sub-title
	color: $sub-title
	font-family: 'Lato', sans-serif
	font-weight: 400
	text-transform: uppercase
	letter-spacing: 2px
	word-spacing: 2px