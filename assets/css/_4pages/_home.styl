header
	height: 100vh
	background: url(../img/headerbranch.jpg)
	background-size: cover
	display: flex
	display: -ms-flexbox
	display: -webkit-flex
	flex-direction: column
	justify-content: center
	align-items: center
header>h1
	text-align: center
	text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.5)
	color: white
	z-index: 100
header .el-typed
	display: inline!important
	font-size: 45px
	text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.5)
	text-align: center
	color: white
	z-index: 100
	@media (max-width: 320px)
		font-size: 28px
header>h2
	font-size: 21px
	text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.5)
	text-align: center
	color: white
	z-index: 100
	border-bottom: 2px solid white
	padding-bottom: 7px
	text-transform: uppercase
header>img
	margin: 0 auto
	z-index: 100
	width: 350px
	@media (max-width: 320px)
		width: 300px
header>p
	text-align: center
	margin: 0
	color: white
	z-index: 100
	@media (max-width: 991px)
		width: 35%
.arrow-circle
	margin-top: 75px
	font-size: 55px
	color: white
	&:hover
		color: $main-color
		text-decoration: none	
.boxem-odd
	position: relative
	top: 34px
	left: 34px
	@media (max-width: 991px)
		left: 0px
.boxem-even
	position: relative
	top: 34px
	left: -24px
	@media (max-width: 991px)
		left: 0px
.sub-title
	color: $sub-title
	font-family: 'Lato', sans-serif
	font-weight: 400
	text-transform: uppercase
	letter-spacing: 2px
	word-spacing: 2px
.lead-odd
	font-weight: 700
	text-align: right
	@media (max-width: 991px)
		text-align: center
.lead-even
	font-weight: 700
	text-align: left
	@media (max-width: 991px)
		text-align: center
.sub-lead-odd
	font-weight: 400
	text-align: right
	font-size: 12px
	@media (max-width: 991px)
		text-align: center
.sub-lead-even
	font-weight: 400
	text-align: left
	font-size: 12px
	@media (max-width: 991px)
		text-align: center
.small-diamond
	width: 55px
	height: 55px
	background-color: rgba(255, 255, 255, 0.72)
	float: right
	position: relative
	top: 45px
	left: 57px
	transform(rotate(45deg))
	box-shadow(2px 2px 7px 1px grey)
	@media (max-width: 991px)
		left: -10px
		width: 40px
		height: 40px
		top: 65px
.small-diamond>h1
	color: black
	transform(rotate(-45deg))
	position: relative
	right: -13px
	top: -3px
	font-size: 27px
	@media (max-width: 991px)
		right: -10px
		top: -10px
		font-size: 22px
.small-diamond-even
	width: 55px
	height: 55px
	background-color: rgba(255, 255, 255, 0.72)
	float: right
	position: relative
	top: 45px
	left: -25px
	transform(rotate(45deg))
	box-shadow(2px 2px 7px 1px grey)
	@media (max-width: 991px)
		left: 20px
		width: 40px
		height: 40px
		top: 65px
.small-diamond-even>h1
	color: black
	transform(rotate(-45deg))
	position: relative
	right: -17px
	top: -3px
	font-size: 27px
	@media (max-width: 991px)
		right: -10px
		top: -10px
		font-size: 22px
.small-diamond-even>h1:nth-last-child(1)
	font-size: 45px
	right: -19px
	top: -12px
	@media (max-width: 991px)
		font-size: 35px
		right: -12px
		top: -17px
.dash
	display: block
	position: relative
	transform(rotate(-45deg))
	border-bottom: 2px solid #CACACA
	left: 52px
	top: 20px
	@media (max-width: 991px)
		display: none
.diamond-logo
	margin-top: 77px
	width: 150px
	height: 150px
	background-color: $main-color
	position: relative
	top: -8px
	left: 100px
	transform(rotate(45deg))
	box-shadow(2px 2px 7px 1px grey)
	@media (max-width: 991px)
		display: none
.diamond-logo>img
	position: relative
	z-index: 100
	top: 24px
	left: -5px
	height: 115px
	transform(rotate(-45deg))
.nth-row
	margin-left: -15px
	margin-right: -15px
	position: relative
	top: -82px
	@media (max-width: 991px)
		position: inherit
		top: 0