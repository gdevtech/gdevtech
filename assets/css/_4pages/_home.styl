header
	height: 100vh
	background-image: url('http://www.trewmarketing.com/smartmarketingblog/wp-content/uploads/2015/11/10-Web-Design-Trends-for-2015.png')
	background-size: cover
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
	&:before
		position: absolute
		content:" "
		top:0
		left:0
		width:100%
		height:100%
		display: block
		z-index:0
		background-color: rgba(0, 0, 0, 0.52)
header>h1
	color: white
	z-index: 100
header>h2
	color: white
	z-index: 100
header>h4
	color: white
	z-index: 100
	border-bottom: 2px solid white
	padding-bottom: 7px
	text-transform: uppercase
header>img
	z-index: 100
header>p
	margin: 0
	color: white
	z-index: 100
	@media (max-width: 767px)
		width: 80%