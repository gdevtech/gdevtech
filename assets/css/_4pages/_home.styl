header
	height: 100vh
	background-image: url('../img/headerbg.jpg')
	background-size: cover
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
	&:before
		position: absolute
		content:" "
		top:0
		left:0
		width:100%
		height: 100vh
		display: block
		z-index:0
		background-color: rgba(0, 0, 0, 0.12)
header>h1
	color: white
	z-index: 100
header>h2
	color: white
	z-index: 100
header>h4
	color: white
	z-index: 100
	border-bottom: 2px solid white
	padding-bottom: 7px
	text-transform: uppercase
header>img
	z-index: 100
header>p
	margin: 0
	color: white
	z-index: 100
	@media (max-width: 767px)
		width: 80%
.glyphicon-circle-arrow-down
	&:hover
		color: #3e7ae3
		text-decoration: none
.glyphicon-circle-arrow-down
	margin-top: 75px
	font-size: 55px
	color: white
.top-buffer
	margin-top: 45px
.title
	font-family: 'Lato', sans-serif
	font-weight: 400
	color: $main-color
	text-transform: uppercase
	letter-spacing: -2px
	word-spacing: 5px
.sub-title
	color: $sub-title
	font-family: 'Lato', sans-serif
	font-weight: 400
	text-transform: uppercase
	letter-spacing: 2px
	word-spacing: 2px
.lead
	font-weight: 700
	text-align: right
	@media (max-width: 767px)
		text-align: center
.sub-lead
	font-weight: 400
	text-align: right
	@media (max-width: 767px)
		text-align: center
.diamond-logo
	width: 0
	height: 0
	border: 115px solid transparent
	border-bottom-color: $main-color
	position: relative
	top: -85px
	left: 70px
	@media (max-width: 767px)
		display: none
.diamond-logo:after
	content: ''
	position: absolute
	left: -115px
	top: 115px
	width: 0
	height: 0
	border: 115px solid transparent
	border-top-color: $main-color
	@media (max-width: 767px)
		display: none
.diamond-logo>img
	position: relative
	z-index: 100
	top: 65px
	left: -71px
	height: 105px
	@media (max-width: 767px)
		display: none
.nth-row
	margin-left: -15px
	margin-right: -15px
	position: relative
	top: -109px
	@media (max-width: 767px)
		position: inherit
		top: 0