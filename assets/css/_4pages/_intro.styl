.intro-section
	height: 560px
	background-image: url('../img/introbg.jpg')
	background-size: cover
	position: relative
	color: white
	overflow: hidden
	&:before
		position: absolute
		content:" "
		top:0
		left:0
		width:100%
		height: 100%
		display: block
		z-index:0
		background-color: rgba(0, 0, 0, 0.50)
.intro-section h4
	margin: 0
	position: absolute
	top: 35%
	left: 50%
	margin-right: -50%
	transform: translate(-50%, -50%)
.intro-section p
	margin: 0
	position: absolute
	top: 50%
	left: 50%
	margin-right: -50%
	transform: translate(-50%, -50%)
.intro-section .btn-primary
	margin: 0
	position: absolute
	background-color: $main-color
	padding: 15px 35px
	text-transform: uppercase
	cursor: pointer
	top: 75%
	left: 50%
	margin-right: -50%
	transform: translate(-50%, -50%)
.container-intro
	width: 70%
	text-align: center
	@media (max-width: 767px)
		width: 90%
.container-intro>h4
	text-transform: uppercase
	font-size: 18px
	word-spacing: 2px
	letter-spacing: 1px
	@media (max-width: 767px)
		font-size: 13px
.container-intro>p
	font-size: 2em
	@media (max-width: 767px)
		font-size: 20px
		margin-top: 30px